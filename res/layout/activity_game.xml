<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/word_to_guess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:typeface="monospace" />

    <TextView
        android:id="@+id/already_typed_letters"
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/word_to_guess"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#A3A3A3"
        android:typeface="monospace" />

    <EditText
        android:id="@+id/letters_entry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/already_typed_letters"
        android:inputType="textNoSuggestions"
        android:maxLength="1"
        android:gravity="center"
        android:ems="4" />

    <Button
        android:id="@+id/confirm_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/letters_entry"
        android:layout_centerHorizontal="true"
        android:text="@string/confirm_try" />

    <TextView
        android:id="@+id/infos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/confirm_button"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#A3A3A3" />
</RelativeLayout>